<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="@string/text_register"
        app:layout_constraintEnd_toEndOf="@id/button_login"
        app:layout_constraintStart_toStartOf="@id/button_login"
        app:layout_constraintTop_toBottomOf="@id/button_login" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/text_login"
        app:layout_constraintEnd_toEndOf="@id/edit_text_password"
        app:layout_constraintStart_toStartOf="@id/edit_text_password"
        app:layout_constraintTop_toBottomOf="@id/edit_text_password" />

    <TextView
        android:id="@+id/text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_password"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/edit_text_id2"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_id2" />

    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_input_password"
        app:layout_constraintStart_toStartOf="@+id/edit_text_id2"
        app:layout_constraintTop_toBottomOf="@+id/text_password" />

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_id"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_id2"
        app:layout_constraintStart_toStartOf="@+id/edit_text_id2" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/kakao_talk"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/image_logo"
        app:layout_constraintStart_toEndOf="@id/image_logo"
        app:layout_constraintTop_toTopOf="@id/image_logo" />

    <EditText
        android:id="@+id/edit_text_id2"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_input_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/kakao_logo"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/text_id"
        app:layout_constraintStart_toStartOf="@+id/edit_text_id2" />

</androidx.constraintlayout.widget.ConstraintLayout>